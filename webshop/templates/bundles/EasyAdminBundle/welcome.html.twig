{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %} Dashboard {% endblock %}

{% block content %}
    <div class="content">
        <div class="container">
            <div class="row">
                <h2> Manage your shop with ease! </h2>
            </div>
            <div class="row mt-3">
                <div class="col-6 alert-light text-center">
                    <span class="display-3"> {{ userCount['value'] }} </span> active Users
                </div>
                <div class="col-6 alert-light text-center">
                    <span class="display-3"> {{ productCount['value'] }} </span> Products
                </div>
                <div class="container-lg alert-light text-center">
                    <span class="display-3">$ {{ totalEarned|number_format(2) }} </span> earned
                </div>
            </div>
        </div>

    </div>
{% endblock content %}
