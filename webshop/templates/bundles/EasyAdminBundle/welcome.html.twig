{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %} Dashboard {% endblock %}

{% block content %}
    <div class="content">
        <div class="container">
            <div class="row">
                <h2> Manage your shop with ease! </h2>
            </div>
            <div class="row">
                <h2> {{ "now"|date("l") }}, {{ "now"|date("d/m/Y") }} </h2>
            </div>
            <div class="row mt-3">
                <div class="col-6 alert-light">
                    <span class="display-3"> {{ userCount['value'] }} </span> Users
                </div>
                <div class="col-6 alert-light">
                    <span class="display-3"> {{ productCount['value'] }} </span> Products
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
