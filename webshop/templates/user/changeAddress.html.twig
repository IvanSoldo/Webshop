{% extends 'base.html.twig' %}

{% block body %}

    <div class="row justify-content-center">
        <h3 class="h3 mb-3 font-weight-normal">Change Address</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-6">
            {{ form_start(addressForm) }}
            {{ form_row(addressForm.city) }}
            {{ form_row(addressForm.postalCode) }}
            {{ form_row(addressForm.address) }}
            <button type="submit" class="btn btn-block btn-primary">Change Address</button>
            {{ form_end(addressForm) }}
        </div>
    </div>

{% endblock %}
