{% extends 'base.html.twig' %}

{% block body %}

    <div class="row justify-content-center">
        <h3 class="h3 mb-3 font-weight-normal">Change Password</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-6">
            {{ form_start(changePasswordForm) }}
            {{ form_row(changePasswordForm.oldPassword) }}
            {{ form_row(changePasswordForm.plainPassword, {
                label: 'Password'
            }) }}
            <button type="submit" class="btn btn-block btn-primary">Change Password</button>
        </div>
    </div>
    {{ form_end(changePasswordForm) }}
{% endblock %}
